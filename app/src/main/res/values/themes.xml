<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vanilla" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/main_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">#001AFF</item>
        <item name="android:statusBarColor" >@color/white</item>
        <item name="actionBarTheme">@style/ActionBar</item>
        <item name="colorAccent">@color/main_theme</item>
        <item name="android:colorEdgeEffect">@color/main_theme</item>
    </style>

    <style name="Theme.Vanilla.Main">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActionBar">
        <item name="android:windowBackground">@color/main_theme</item>
        <item name="android:colorForeground">@color/main_theme</item>
        <item name="android:colorForegroundInverse">@color/main_theme</item>
        <item name="android:colorBackground">@color/main_theme</item>
        <item name="android:colorBackgroundCacheHint">@color/main_theme</item>
        <item name="colorBackgroundFloating">@color/main_theme</item>
    </style>

    <style name="Theme.Vanilla.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Vanilla.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Vanilla.Tabs">
        <item name="tabIndicatorColor">@color/main_theme</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="Theme.Vanilla.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Vanilla.Tabs.Appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Vanilla.Switch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/main_theme</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#8D221F1F</item>
    </style>

    <style name="Theme.Vanilla.ViewPager">
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.Vanilla">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/main_theme</item>
        <item name="android:paddingLeft">@dimen/mtrl_btn_text_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/mtrl_btn_text_btn_padding_right</item>
        <item name="iconTint">@color/mtrl_text_btn_text_color_selector</item>
        <item name="iconPadding">@dimen/mtrl_btn_text_btn_icon_padding</item>
        <item name="backgroundTint">@color/mtrl_btn_text_btn_bg_color_selector</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
    </style>

</resources>