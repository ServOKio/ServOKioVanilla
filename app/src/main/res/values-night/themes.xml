<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.Vanilla" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSurface">@color/theme_dark</item>
        <item name="android:statusBarColor" >@color/theme_dark</item>
        <item name="android:navigationBarColor">@color/theme_dark</item>
        <item name="colorAccent">@color/main_theme</item>
    </style>

    <style name="Theme.Vanilla.Main">
        <item name="android:background">@color/theme_dark</item>
    </style>

    <style name="Theme.Vanilla.Tabs" arent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/main_theme</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Theme.Vanilla.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Vanilla.AppBarLayout">
        <item name="android:background">@color/theme_dark</item>
    </style>

    <style name="ViewPager">
        <item name="background">@color/theme_dark</item>
    </style>
</resources>